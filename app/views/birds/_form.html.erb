<%= form_for @bird do |f| %>

  <% if @bird.errors.any?%>
    <ul>
      <% @bird.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :color %>
  <%= f.text_field :color %>
  <br>
  <%= f.label :wingspan %>
  <%= f.number_field :wingspan %>
  <br>
  <%= f.submit name_of_button %>
<% end %>
